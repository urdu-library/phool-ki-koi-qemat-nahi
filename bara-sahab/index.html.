<body>

<header>
بڑا صاحب 
</header>

<div id="book"></div>

<script>
/* ========= صرف یہاں تبدیلی کریں ========= */
const totalPages =85;   // کتاب کے کل صفحات
const imagePath = ""; // امیجز فولڈر
/* ======================================= */

const book = document.getElementById("book");

for(let i=1; i<=totalPages; i++){
  const img = document.createElement("img");
  img.src = `${imagePath}/${String(i).padStart(3,"0")}.webp`;
  img.loading = "lazy";
  img.className = "page";
  book.appendChild(img);
}
</script>

